@using League_Of_Legend
@using League_Of_Legend.ViewModels

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ContactViewModels

@{
    Layout = "_Layout";
}

<h1>Contact</h1>

<div id="contact-form row">
    <form asp-controller="Cont" asp-action="Contact" asp-anti-forgery="true" method="post">
        <div class="form-group">
            <div class="col-md-12 form-group">
                <input asp-for="Name" class="form-control" placeholder="Nom" />
                <span asp-validation-for="Name" style="color: red"></span>
            </div>
            <div class="col-md-12 form-group">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" style="color: red"></span>
            </div>
            <div class="col-md-12 form-group">
                <input asp-for="Subject" class="form-control" placeholder="Objet" />
                <span asp-validation-for="Subject" style="color: red"></span>
            </div>
            <div class="col-md-12 form-group">
                <textarea asp-for="Message" class="message form-control" placeholder="Votre message..."></textarea>
            </div>
            <div class="col-md-6">
                <button class="btn btn-primary" type="submit" id="submit">Envoyer</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@using League_Of_Legend
@using League_Of_Legend.ViewModels
@using LeagueOfLegend.DB.Models

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RoleIndexViewModels

@{
    Layout = "_Layout";
}

<h1> @Model.Title </h1>

<div class="ajout">
    <a asp-controller="Role" asp-action="Create" class="btn btn-dark">
        Ajouter un Rôle
        <i class="fa fa-plus" aria-hidden="true"></i>
    </a>

</div>

<div class="text-center">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        @foreach (Role role in Model.Roles)
        {
            <tr>
                <td>
                    @Html.ActionLink(role.Identifiant.ToString(), "Role", "Roles", new { id = role.Identifiant })
                </td>
                <td>@role.Nom</td>
                <td>
                    @{
                        Dictionary<string, string> parameters = new Dictionary<string, string>();

                        parameters.Add("id", role.Identifiant.ToString());
                    }

                    <a asp-controller="Role" asp-action="Delete" asp-all-route-data="parameters" class="btn btn-danger">
                        Supprimer
                        <i class="far fa-trash-alt"></i>
                    </a>


                    <a asp-controller="Role" asp-action="Edit" asp-all-route-data="parameters" class="btn btn-success">
                        Modifier
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
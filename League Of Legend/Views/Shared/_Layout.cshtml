
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />

</head>  
<body>
    <!--Contenu-->
    <header>
        mon pseudo est : @@monpseudo <br />
        Nous sommes le @DateTime.Now

        <i class="fas fa-warehouse"></i>
        <ul>
            <li>
                @Html.ActionLink("Liste des Champions", "Index", "Champion")

                @*<a href="/Personnes">Liste des personnes</a>*@
            </li>
        </ul>

    </header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div id="left_navigation">
                    Contenu commun à tout les pages
                    <ul>
                        <li>menu 1</li>
                        <li>menu 2</li>
                    </ul>
                    <h3>Image différente par vu</h3>
                    @RenderSection("ImageLeft", false)
                </div>

            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer>
        le footer
        @RenderSection("Footer", false)
    </footer>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
</body>
</html>
